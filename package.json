    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "jest-puppeteer": "^4.1.1",
    "lerna": "^3.13.4",
